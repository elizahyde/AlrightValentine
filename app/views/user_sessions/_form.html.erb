<%= form_tag user_sessions_path, :method => :post do %>
  <fieldset>
    <legend>Sign-in</legend>
  <div class="field">
    <%= label_tag :username %><br />
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions btn btn-default">
    <%= submit_tag "Login" %>
  </div>
</fieldset>
<% end %>